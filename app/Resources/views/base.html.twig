<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Savvy Creative - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
          {% stylesheets
            '@SavvyStaticBundle/Resources/public/css/main.css'
            output='/css/main.css'
          %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
          {% endstylesheets %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <div id="wrapper">
          <div id="header_wrapper">
            <div id="header">
              <a href="{{ path("home") }}"><img id="logo" class="left" alt="Savvy Creative Uk. Smart Thinking, Clever Design, Solid Development" src="/images/logo.jpg" /></a>
            </div>
          </div>
        <div id="content_wrapper" class="{% block theme %}{%endblock%}">
          <div id="content">
            <ul class="navigation right">
              <li><a href="{{ path("home") }}" {% if app.request.attributes.get('_route') == 'home' %}class="underline"{% endif %}>HOME</a></li>
              <li><a href="{{ path("about_us") }}" {% if app.request.attributes.get('_route') == 'about_us' %}class="underline"{% endif %}>ABOUT US</a></li>
              <li><a href="{{ path("clients") }}" {% if app.request.attributes.get('_route') == 'clients' %}class="underline"{% endif %}>CLIENTS</a></li>
              <li><a href="{{ path("home") }}" {% if app.request.attributes.get('_route') == 'portfolio' %}class="underline"{% endif %}>PORTFOLIO</a></li>
              <li><a href="{{ path("meet_the_team") }}" {% if app.request.attributes.get('_route') == 'meet_the_team' %}class="underline"{% endif %}>MEET THE TEAM</a></li>
              <li><a href="{{ path("new_contact") }}" {% if app.request.attributes.get('_route') == 'new_contact' %}class="underline"{% endif %}>CONTACT</a></li>
            </ul>
            <div class ="cb"></div>
            {% block body %}{% endblock %}
            <div class ="cb"></div>
          </div>
        </div>
        
        {% block quick_nav %}
          <div id="quick_nav_wrapper" class ="cb">
            <div id="quick_nav">
              <div class="quick-nav rob left">
                <h4 {% if app.request.attributes.get('_route') == 'about_us' %}class="orange"{% endif %}>SMART THINKING</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labo...</p>
                <a href="{{ path("about_us") }}" class="readmore">READ MORE</a>
              </div>
              <div class="quick-nav rob left">
                <h4 {% if app.request.attributes.get('_route') == 'about_us' %}class="orange"{% endif %}>CLEVER DESIGN</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labo...</p>
                <a href="{{ path("about_us") }}" class="readmore">READ MORE</a>
              </div>
              <div class="quick-nav rob left">
                <h4 {% if app.request.attributes.get('_route') == 'portfolio' %}class="orange"{% endif %}>SOLID DEVELOPMENT</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labo...</p>
                <a href="{{ path("home") }}" class="readmore">READ MORE</a>
              </div>
              <div class="quick-nav left">
                <h4 {% if app.request.attributes.get('_route') == 'new_contact' %}class="orange"{% endif %}>CONTACT US</h4>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labo...</p>
                <a href="{{ path("new_contact") }}" class="readmore">READ MORE</a>
              </div>
              <p id="address" class="cb white">23 BRIDGFORD ROAD, NOTTINGHAM, NG2 6AU</p>
            </div>
          </div>
        {% endblock %}
        <div id="footer_wrapper">
          <div id="footer"></div>
        </div>

        {% block javascripts %}{% endblock %}
      </div>
    </body>
</html>
